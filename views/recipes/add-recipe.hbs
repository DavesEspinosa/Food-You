<h1>Coocking...</h1>

<form action="/add-recipe" method="post">
  <label for="title-input">Title</label>
  <input type="text" name="title" id="title-input">

  <label for="inspiration-input">Inspiration:</label>
  <input type="text" name="inspiration" id="inspiration-input">

  <label for="ingredients-input">Ingredients:</label>
  <textarea class="form-control" name="ingredients" id="ingredients-textarea" rows="3"></textarea>
  
  <label for="email-input">Email:</label>
  <input type="email" name="email" id="email-input">
  
  <label for="password-input">Password:</label>
  <input type="password" name="password" id="password-input">
  
  <label for="address-input">Address</label>
  <input type="text" name="address" id="address-input">

  <label for="postCode-input">Post code:</label>
  <input type="text" name="postcode" id="postCode-input">
  
  <label for="city-input">City</label>
  <input type="text" name="city" id="city-input">
  
  <label for="phone-input">Phone:</label>
  <input type="text" name="phone" id="phone-input">
  
  <label for="profilePicture-input">Profile picture:</label>
  <input type="text" name="profilePicture" id="profilePicture-input">


  <button>Sign up</button>

</form>