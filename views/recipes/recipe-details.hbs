{{#if this.data.recipe.author}}
<div class="header" id="myHeader">
  <h1>{{this.data.recipe.title}}</h1>
</div>
{{else}}
<div class="header" id="myHeader">
  <h1>{{this.data.recipe.title}}</h1>
</div>
{{/if}}


 <div class="card mb-3" id="detail">
      <img class="card-img-top" src="https://res.cloudinary.com/sepuckett86/image/upload/v1513176680/IMG_5837_xicdt5.jpg" alt="Card image cap">
      <div class="card-body">
        <p class="card-text" id="inspiration">{{this.data.recipe.inspiration}}</p>
    <p class="card-text"><small class="text-muted">{{this.data.recipe.ingredients}}</small></p>

    <p class="card-text"><small class="text-muted">{{this.data.recipe.duration}}</small></p>

    {{#if this.data.isSell}}
    <iframe class="iframe" width="560" height="315" src="https://www.youtube.com/embed/{{this.data.video}}"
      frameborder="0" allow="accelerometer; autoplay; encrypted-media; gyroscope; picture-in-picture"
      allowfullscreen></iframe>
    {{/if}}
    {{#if this.data.recipe.author}}
    <iframe class="iframe" width="560" height="315" src="https://www.youtube.com/embed/{{this.data.video}}"
      frameborder="0" allow="accelerometer; autoplay; encrypted-media; gyroscope; picture-in-picture"
      allowfullscreen></iframe>
    {{/if}}
      </div>
    </div>
    {{#if this.data.recipe.author}}
<div class="buttons">
  <form action="/{{this.data.recipe._id}}/delete" method="post">
    <button class="btn btn-danger" type="submit">Delete</button>
  </form>
</div>
{{else}}
{{#if this.data.isSell}}
<div class="buttons">
  <form action="/{{this.data.recipe._id}}" method="post">
    <button class="btn btn-primary" type="submit">Order Again</button>
  </form>
</div>
{{else}}
<div class="buttons">
  <form action="/{{this.data.recipe._id}}" method="post">
    <button class="btn btn-primary" type="submit">Let's cook</button>
  </form>
</div>
{{/if}}
{{/if}}