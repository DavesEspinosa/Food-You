<section>
  <div class="header" id="myHeader">
    <h2>{{currentUserInfo.name}} Profile</h2>
  </div>
  <div class="container register-form">
    <div class="form">
      <div class="form-content">
        <div class="row">
          <div class="col-md-6">
            <div class="form-group">
              <img src="{{currentUserInfo.profilePicture}}" alt="">
            </div>
            <div class="form-group">
              <label for="name-input">Name:</label>
              <p>{{currentUserInfo.name}}</p>
            </div>
            <div class="form-group">
              <label for="name-input">Firstname:</label>
              <p>{{currentUserInfo.firstname}}</p>
            </div>
            <div class="form-group">
              <label for="userName-input">Username:</label>
              <p>{{currentUserInfo.username}}</p>
            </div>

          </div>
          <div class="col-md-6">
            <div class="form-group">
              <label for="email-input">Email:</label>
              <p>{{currentUserInfo.email}}</p>
            </div>
            <div class="form-group">
              <label for="password-input">Address:</label>
              <p>{{currentUserInfo.address}}</p>
            </div>
            <div class="form-group">
              <label for="name-input">Postcode:</label>
              <p>{{currentUserInfo.postcode}}</p>
            </div>
            <div class="form-group">
              <label for="name-input">City:</label>
              <p>{{currentUserInfo.city}}</p>
            </div>
            <div class="form-group">
              <label for="userName-input">Phone:</label>
              <p>{{currentUserInfo.phone}}</p>
            </div>
          </div>
           <div id="button"> 
         <a href="/edit-profile"><button type="button" class="btn btn-dark">Edit</button></a>
          </div>
        
        </div>
      </div>
    </div>
</section>