<section>
  <div class="header" id="myHeader">
    <h2>Edit your profile</h2>
  </div>
  <div class="container register-form">
    <form action="/edit-profile" class="form" method="post" enctype="multipart/form-data">
      <div class="form-content">
        <div class="row">
          <div class="col-md-6">
            <div class="form-group">
              <label for="name-input">Name:</label>
              <input type="text" class="form-control" placeholder="{{currentUserInfo.name}}" value="" name="name"
                id="name-input" />
            </div>
            <div class="form-group">
              <label for="name-input">Firstname:</label>
              <input type="text" class="form-control" placeholder="{{currentUserInfo.firstname}}" value=""
                name="firstname" id="firstName-input" />
            </div>
            <div class="form-group">
              <label for="userName-input">Username:</label>
              <input type="text" class="form-control" placeholder="{{currentUserInfo.username}}" value=""
                name="username" id="userName-input" />
            </div>
            <div class="form-group">
              <label for="email-input">Email:</label>
              <input type="email" class="form-control" placeholder="{{currentUserInfo.email}}" value="" name="email"
                id="email-input" />
            </div>
            <div class="form-group">
              <label for="password-input">Password:</label>
              <input type="password" class="form-control" placeholder="Your Password *" value="" name="password"
                id="password-input" />
            </div>
          </div>
          <div class="col-md-6">
            <div class="form-group">
              <label for="address-input">Address:</label>
              <input type="text" class="form-control" placeholder="{{currentUserInfo.address}}" value="" name="address"
                id="address-input" />
            </div>
            <div class="form-group">
              <label for="postcode-input">Postcode:</label>
              <input type="text" class="form-control" placeholder="{{currentUserInfo.postcode}}" value=""
                name="postcode" id="postcode-input" />
            </div>
            <div class="form-group">
              <label for="city-input">City:</label>
              <input type="text" class="form-control" placeholder="{{currentUserInfo.city}}" value="" name="city"
                id="city-input" />
            </div>
            <div class="form-group">
              <label for="phone-input">Phone:</label>
              <input type="text" class="form-control" placeholder="{{currentUserInfo.phone}}" value="" name="phone"
                id="phone-input" />
            </div>
            <div class="form-group">
              <label for="profilePicture-input">Profile Picture:</label>
              <input type="file" class="form-control" placeholder="{{currentUserInfo.profilePicture}}" value=""
                name="profilePicture" id="profilePicture-input" />
            </div>
          
           <div id="button">
             <button class="btn btn-dark">Save your changes</button>
            </div>  
    </form>


  {{#if errorMessage}}
  <p class="error-message">
    {{ errorMessage }}
  </p>
  {{/if}}

  </div>
</section>
